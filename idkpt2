#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>

int main() {
    int dir = 1, pos = 0, frame = 0;
    int blink = 0, shoot = 0, assimilate = 0;
    while (1) {
        system("clear");
        // Background stars
        printf("\033[37m*   .     *         .   *     .       *   .     *   \n");
        printf("  .     *       .     *   .         *     .   *     \n");
        printf("*     .   *   .         *     .   *       .     *   \n");
        printf("    *         .   *     .         *   .     *       \n");
        printf(".   *     .         *   .     *         .   *     . \n");
        printf("      .   *   .         *     .   *       .     *   \n");
        printf("*         .     *   .         *     .   *         . \n");
        printf("  .     *       .     *   .         *     .   *     \n\033[0m");

        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m                                   /\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\                                   \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m                                 //\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\                                 \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m                               ///\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\                               \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m                             ////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\                             \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m                           /////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\                           \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m                         //////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\                         \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m                       ///////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\                       \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m                     ////////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\                     \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m                   /////////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\                   \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m                 //////////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\                 \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m               ///////////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\               \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m             ////////////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\             \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m           /////////////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\           \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m         //////////////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\         \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m       ///////////////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\       \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m     ////////////////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\     \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[32m   /////////////////\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\   \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m ////////////////////////////////////////////////////////////////////////////////// \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m///////////////////////////////////////////////////////////////////////////////////\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| ||||||||| |||||||| |\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[31m\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        printf("\033[34m \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\  \033[0m\n");
        for (int i = 0; i < pos; i++) printf(" ");
        if (blink) {
            printf("\033[34m   \\\\\\\\\\\\\\\\ \033[33m[]\033[34m \\\\\\\\\\\\\\\\ \033[33m[]\033[34m \\\\\\\\\\\\\\\\ \033[33m[]\033[34m \\\\\\\\\\\\\\\\ \033[33m[]\033[34m \\\\\\\\\\\\\\\\ \033[33m[]\033[34m \\\\\\\\\\\\\\\\ \033[33m[]\033[34m \\\\\\\\\\\\\\\\ \033[33m[]\033[34m \\\\\\\\\\\\\\\\   \033[0m\n");
        } else {
            printf("\033[34m   \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\   \033[0m\n");
        }
        if (shoot) {
            for (int j = 0; j < 15; j++) {
                for (int i = 0; i < pos + 35; i++) printf(" ");
                printf("\033[31m|||||||| \033[33m*DESTRUCT*\033[0m\n");
            }
            printf("\a\a\a");  // Triple beep for more destruction
        }
        if (assimilate) {
            for (int j = 0; j < 12; j++) {
                for (int i = 0; i < pos + 25; i++) printf(" ");
                printf("\033[32m|||||||| \033[33m*ASSIMILATE*\033[0m\n");
                for (int i = 0; i < pos + 45; i++) printf(" ");
                printf("\033[32m|||||||| \033[33m*ASSIMILATE*\033[0m\n");
            }
            printf("\a\a");  // Double beep for assimilation
        }
        usleep(80000);
        pos += dir;
        if (pos > 5 || pos < 0) dir = -dir;
        frame++;
        if (frame % 3 == 0) blink = !blink;
        if (frame % 6 == 0) shoot = !shoot;
        if (frame % 9 == 0) assimilate = !assimilate;
        if (blink || shoot || assimilate) printf("\a");
    }
    return 0;
}
